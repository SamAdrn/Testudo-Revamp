<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../templates/partials/head') %>
</head>

<body>
    <!-- Navbar -->
    <%- include('../templates/partials/navbar') %>

    <div class="text-center m-5">
        <h1>Welcome to the Revamped Testudo SOC</h1>
    </div>

    <!-- Flexbox for decorations (?) -->
    <div class="d-flex justify-content-evenly mt-5">
        <div id="box1" class="box">
            Random Class of the Day
        </div>
        <div>
            <img id="testudo-img" src="media/testudo.png" alt="Wow it's Testudo">
        </div>
        <div id="box3" class="box">
            Random Professor of The Day
        </div>
    </div>

    <!-- Flexbox for all forms -->
    <div class="d-flex justify-content-evenly mt-5">
        <!-- Search by Course ID Form -->
        <form autocomplete="off" method="post" action="search" 
            class="p-4 border rounded search-form">
            <div class="row mb-3">
                <label for="course" class="col-sm-3 col-form-label">
                    Course
                </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="course" 
                        placeholder="CMSC335" id="course-input" 
                        onkeyup="suggest(this)" required>
                    <div id="course-input-sug" hidden></div>
                </div>
                <div class="col-sm-1 mt-1 loader" id="loader" hidden></div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary p-2">Search</button>
            </div>
        </form>
    </div>

    <script src="scripts/suggestions.js"></script>
</body>

</html>